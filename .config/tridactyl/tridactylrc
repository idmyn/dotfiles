" config for firefox tridactyl plugin based on example config by bovine3dom

sanitise tridactyllocal tridactylsync

set newtab about:blank

set hintfiltermode vimperator-reflow
set hintnames numeric

bind H tabprev
bind J back
bind K forward
bind L tabnext

set searchengine duckduckgo
set searchurls.lib https://discovered.ed.ac.uk/primo-explore/search?query=any,contains,%s&tab=default_tab&search_scope=default_scope&vid=44UOE_VU2&offset=0
set searchurls.y https://www.youtube.com/results?search_query=%s

unbind gt

bind goc open https://lichess.org
bind gtc tabopen https://lichess.org
bind gop open https://lichess.org/training/
bind gtp tabopen https://lichess.org/training/
bind gom open https://messenger.com
bind gtm tabopen https://messenger.com

bind gO composite js "https://outline.com/" + document.location.href | open
command outline composite js "https://outline.com/" + document.location.href | open
bind gA composite js "https://web.archive.org/save/" + document.location.href | open
command archive composite js "https://web.archive.org/save/" + document.location.href | open

blacklistadd http://chriskempson.com/projects/base16/
blacklistadd https://thetypingcat.com


#!/bin/sh
#
# This is a direct wrapper around emacsclient that can be used as a value for
# $EDITOR. It does not use the GUI, and instead always creates a new frame on
# the CLI.
set -o errexit -o nounset

emacsclient --alternate-editor "" \
            --socket-name=cli \
            --tty \
            --quiet "$@" 2>/dev/null
